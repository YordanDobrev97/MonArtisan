@model GetAllProjectsViewModel<GetUserProjectsViewModel>
 
@{
    Layout = "_ProfessionalLayout";
}

<div id="topnavbar">
    <div class="topnav mb-3">
        <div class="d-flex px-1">
            <a href="#home" class="active">Bonjour prénom,</a> 
        </div>
    </div>
    
    <div class="table-responsive px-2">
        <table class="table table-borderless">
            <thead>
                <tr>
                    <th scope="col"><span>ID</span></th>
                    <th scope="col">NOM</th>
                    <th scope="col">DATE</th>
                    <th scope="col"><span class="ps-1">GAIN</span></th>
                    <th scope="col">CUR</th>
                    <th class="text-center" scope="col">STATUT</th>
                    <th class="text-center" scope="col">ACTION</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model.Projects)
                {
                    var statut = project.Statut ? "Delivered" : "Undelivered";

                <tr>
                    <td><span class="bg-blight">@project.ProjectId</span></td>
                    <td><span class="bg-bdark">ABC<span class="ps-1">@project.Name</span></span></td>
                    <td><span class="bg-blight">@project.Date</span></td>
                    <td><span class="bg-bdark">$0</span></td>
                    <td><span class="bg-bdark">GBP</span></td>
                    @if (project.Statut)
                    {
                        <td class="text-center px-0"><span class="fas fa-check"></span></td>
                    }
                    else
                    {
                        <td><i class="fas fa-times"></i></td>
                    }
                    <td class="text-center"><span class="fas fa-ellipsis-h"></span></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="d-flex align-items-center justify-content-between px-3 mt-3">
        <div class="bg-bdark fs13"> <span>Page</span> <input class="input-10 text-center" type="text" value="1"> <span><span class="px-1">of</span>1</span> </div>
        <div class="d-flex justify-content-end bg-bdark fs13"> <span class="pe-1">Show</span> <input class="input-10" type="number" value="25"> <span class="ps-2"><span class="pe-2">/</span>Page</span> </div>
    </div>
</div>
