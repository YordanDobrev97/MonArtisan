<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/clientsNotifications.css" />
    <link rel="stylesheet" href="~/css/clientFeed.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"
            integrity="sha256-VazP97ZCwtekAsvgPBSUwPFKdrwD3unUfSGVYrahUqU="
            crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="icon" href="~/repairing-service.png"/>
</head>

<body id="body-pd">
    <div class="feed-container">
        <div class="px-0 bg-light">
            <div class="d-flex">
                <div class="d-flex align-items-center " id="navbar">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-items"
                            aria-controls="navbarSupportedContent" aria-expanded="true" aria-label="Toggle navigation">
                        <span class="fas fa-bars"></span>
                    </button>
                    <a class="text-decoration-none fs14 ps-2" href="#">Clients Feed</a>
                </div>
                <div id="navbar2" class="d-flex justify-content-end pe-4">
                    Hello, @this.ViewData["Username"]
                    <span>
                        <a class="far fa-user-circle " asp-controller="Users" asp-action="Profile"></a>
                    </span>
                </div>
            </div>
            <div class="d-md-flex">
                <ul id="navbar-items" class="p-0">

                    <li>
                        <a asp-area="" asp-controller="Clients" asp-action="Index">
                            <i class="fas fa-home" style="font-size: 30px; color: white;"></i>
                            <span class="text-white font-weight-light" style="font-size: 18px;">Home</span>
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Chat" asp-action="Index">
                            <i class="fas fa-envelope" style="font-size: 30px; color: white;"></i>
                            <span class="text-white font-weight-light" style="font-size: 18px;">Messanger</span>
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Projects" asp-action="Index">
                            <i class="fas fa-plus" style="font-size: 30px; color: white;"></i>
                            <span class="text-white font-weight-light" style="font-size: 18px;">New Project</span>
                        </a>
                    </li>
                    <li>
                        <a style="vertical-align: middle;">
                            <i class="fas fa-cog" style="font-size: 30px; color: white;"></i>
                            <span class="text-white font-weight-light" style="font-size: 18px;">Settings</span>
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="Users" asp-action="LogOut" style="vertical-align: middle;">
                            <i class="fas fa-sign-out-alt" style="font-size: 30px; margin-right: 5px; color: white;"></i>
                            <span class="text-white font-weight-light" style="font-size: 18px;">Sign Out</span>
                        </a>
                    </li>
                </ul>

                <section role="main" style="width: 80%;">
                    @this.RenderBody()
                </section>
            </div>
        </div>
    </div>
    <script>

    </script>
</body>
</html>